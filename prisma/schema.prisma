  // Relations
  utilisateur              Utilisateur                        @relation(fields: [idUtilisateur], references: [idUtilisateur])
  disponibilites           DisponibiliteFormateur[]
  interventions            InterventionFormateur[]
  evaluations              Evaluation[]
  sessionsPrincipales      Session[]
  documents                DocumentFormateur[]
  diplomes                 FormateurDiplome[]
  certificationsPro        FormateurCertification[]
  formationsPedagogiques   FormateurFormationPedagogique[]
  portfolioRealisations    FormateurPortfolio[]
  competencesTech          FormateurCompetenceTechnique[]
