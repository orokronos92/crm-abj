  @@map("formateur_competences_techniques")
}

/// Formations continues du formateur (maintien des compétences)
model FormateurFormationContinue {
  idFormation Int      @id @default(autoincrement()) @map("id_formation")
  idFormateur Int      @map("id_formateur")

  // Informations formation
  intitule    String
  organisme   String
  dateDebut   DateTime @map("date_debut") @db.Date
  dateFin     DateTime? @map("date_fin") @db.Date
  dureeHeures Int      @map("duree_heures")
  domaine     String   // Technique métier, Pédagogie, Sécurité, Numérique, etc.

  // Justificatif document
  certificatUrl String? @map("certificat_url")
  statut        String  @default("TERMINE") // PLANIFIE | EN_COURS | TERMINE | ANNULE

  // Traçabilité
  creeLe        DateTime @default(now()) @map("cree_le") @db.Timestamptz(6)
  modifieLe     DateTime @default(now()) @updatedAt @map("modifie_le") @db.Timestamptz(6)

  // Relations
  formateur Formateur @relation(fields: [idFormateur], references: [idFormateur], onDelete: Cascade)

  @@index([idFormateur])
  @@index([statut])
  @@index([domaine])
  @@map("formateur_formations_continues")
}

/// Veille professionnelle du formateur (salons, conférences, lectures, etc.)
model FormateurVeilleProfessionnelle {
  idVeille     Int      @id @default(autoincrement()) @map("id_veille")
  idFormateur  Int      @map("id_formateur")

  // Informations veille
  type         String   // Salon, Conférence, Webinaire, Formation, Lecture, Réseau professionnel
  nomActivite  String   @map("nom_activite")
  organisme    String?
  dateActivite DateTime @map("date_activite") @db.Date
  duree        Int?     // Durée en heures ou jours
  uniteDuree   String   @default("heures") @map("unite_duree") // heures | jours

  // Traçabilité
  creeLe       DateTime @default(now()) @map("cree_le") @db.Timestamptz(6)
  modifieLe    DateTime @default(now()) @updatedAt @map("modifie_le") @db.Timestamptz(6)

  // Relations
  formateur Formateur @relation(fields: [idFormateur], references: [idFormateur], onDelete: Cascade)

  @@index([idFormateur])
  @@index([type])
  @@index([dateActivite])
  @@map("formateur_veille_professionnelle")
}
